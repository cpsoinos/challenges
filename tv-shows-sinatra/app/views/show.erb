<h1><%= show.title %></h1>

<dl>
  <dt>Network:</dt>
  <dd><%= show.network %></dd>
  <dt>Years:</dt>
  <% if show.ending_year %>
    <dd><%= show.starting_year %> - <%= show.ending_year %></dd>
  <% else %>
    <dd><%= show.starting_year %> - Still running!</dd>
  <% end %>
  <dt>Genre:</dt>
  <dd><%= show.genre %></dd>
</dl>

<% if show.synopsis %>
  <p><%= show.synopsis %></p>
<% else %>
  <p><%= error %></p>
<% end %>


