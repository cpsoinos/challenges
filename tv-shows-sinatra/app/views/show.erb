<h1><%= show.title %></h1>

<% if locals[:error] %>
  <h3><%= error %></h3>
<% end %>

<dl>
  <dt>Network:</dt>
  <dd><%= show.network %></dd>
  <dt>Years:</dt>
  <dd><%= show.starting_year %> - <%= show.ending_year %></dd>
  <dt>Genre:</dt>
  <dd><%= show.genre %></dd>
</dl>

<p><%= show.synopsis %></p>

