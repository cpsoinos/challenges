<h2><%= @question.title %></h2>
<p> <%= @question.description %> </p>

<h2>Answers:</h2>

<ul>
  <% @answers.each do |answer| %>
    <li><%= answer.description %></li>
    <li class="user">-<%= answer.user.email %></li>
    <br />
  <% end %>
</ul>

<% if user_signed_in? %>
  <%= form_for [@question, @answer] do |f| %>
    <div class="field">
      <%= f.label :answer_this_question %>
      <%= f.text_field :description %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
<% end %>
